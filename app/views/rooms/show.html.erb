<div class="container">
  <div class="row">
    <div class="col-12">
      <%= render partial: 'shared/navigation_bar' %>
                          <div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'rooms' %>
  </div>

  <div class="col">
    <div class="chat" data-channel-subscribe="room" data-room-id="<%= @room.id %>">
      <% @room_messages.each do |room_message| %>
        <div class="chat-message-container">
          <div class="row no-gutters">
            <div class="col-auto text-center">
              <img src="<%= room_message.user.gravatar_url %>" class="avatar" alt="">
            </div>

            <div class="col">
              <div class="message-content">
                <p class="mb-1" id="message">
                  <%= room_message.message %>
                </p>

                <div class="text-right">
                  <small>
                    <%= room_message.created_at %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= simple_form_for @room_message, remote: true do |form| %>
      <div class="input-group mb-3" id="formulaire_chat">
        <%= form.input :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input',
                                   autocomplete: 'off'
                                 } %>
                                 <input type="message"  id="surface" name="message " />
        <div id="send">
          <a onclick="valenter()"> <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
          </a>
        </div>
        

      <%= form.input :room_id, as: :hidden %>
    <% end %>
  </div>
</div>
      <div class="my-3">
        <%= yield %>
      </div>
    </div>
  </div>
</div>

