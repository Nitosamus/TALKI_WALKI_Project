
<%= form_tag user_path(@user.id), method: "put" do %> 
  <%= label_tag :last_name %><br>
  <%= text_field_tag :last_name %><br>
  <%= label_tag :first_name %><br>
  <%= text_field_tag :first_name %><br>
  <%= label_tag :city %><br>
  <%= text_field_tag :city %><br>
  <%= label_tag :description %><br>
  <%= text_area_tag :description %><br>
  <%= label_tag :function %><br>
  <%= text_field_tag :function %><br>
  <%= label_tag :phone_number %><br>
  <%= telephone_field_tag :phone_number %><br>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %><br>
  <%= submit_tag "Envoyer"%>

  <% end %>

